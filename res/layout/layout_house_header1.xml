<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    xmlns:app="http://schemas.android.com/apk/res/com.tuniu.activity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <android.support.v4.view.ViewPager
            android:id="@+id/pager_house_list_head"
            android:layout_width="match_parent"
            android:layout_height="60dp" >
        </android.support.v4.view.ViewPager>

        <com.tuniu.utils.CustomIndictor
            android:id="@+id/customIndictor"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_centerHorizontal="true"
            android:layout_alignBottom="@+id/pager_house_list_head"
            app:radius="15"
            app:strokewidth="5"
            app:BackGroundColor="@color/color_grey"
            app:SrcColor="@color/color_green" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:baselineAligned="false"
        android:padding="@dimen/p_out"
        android:background="@color/color_white" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingRight="@dimen/p_in" >

            <ImageView
                android:id="@+id/iv_house_travel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:paddingBottom="@dimen/p_in"
                android:scaleType="fitXY"
                android:src="@drawable/ic_home_page_default_category_travel" />

            <ImageView
                android:id="@+id/iv_house_travel_abroad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="@dimen/p_in"
                android:scaleType="fitXY"
                android:src="@drawable/ic_home_page_default_category_abroad_travel" />

            <ImageView
                android:id="@+id/iv_house_plane"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:paddingBottom="@dimen/p_in"
                android:paddingTop="@dimen/p_in"
                android:scaleType="fitXY"
                android:src="@drawable/ic_home_page_default_category_plane" />

            <ImageView
                android:id="@+id/iv_house_hotel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="@dimen/p_in"
                android:scaleType="fitXY"
                android:src="@drawable/ic_home_page_default_category_hotel" />

            <ImageView
                android:id="@+id/iv_house_visa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="@dimen/p_in"
                android:paddingTop="@dimen/p_in"
                android:scaleType="fitXY"
                android:src="@drawable/ic_home_page_default_category_visa" />

            <ImageView
                android:id="@+id/iv_house_online_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@drawable/ic_home_page_default_category_online_service" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingRight="@dimen/p_in" >

            <ImageView
                android:id="@+id/iv_house_travel_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="@dimen/p_in"
                android:scaleType="fitXY"
                android:src="@drawable/ic_home_page_default_category_group_travel" />

            <ImageView
                android:id="@+id/iv_house_travel_help"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="@dimen/p_in"
                android:scaleType="fitXY"
                android:src="@drawable/ic_home_page_default_category_group_self_help_travel" />

            <ImageView
                android:id="@+id/iv_house_travel_domestic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="@dimen/p_in"
                android:scaleType="fitXY"
                android:src="@drawable/ic_home_page_default_category_domestic_travel" />

            <ImageView
                android:id="@+id/iv_house_plane_international"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="@dimen/p_in"
                android:paddingTop="@dimen/p_in"
                android:scaleType="fitXY"
                android:src="@drawable/ic_home_page_default_category_international_plane" />

            <ImageView
                android:id="@+id/iv_house_plane_bus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="@dimen/p_in"
                android:scaleType="fitXY"
                android:src="@drawable/ic_home_page_default_category_bus" />

            <ImageView
                android:id="@+id/iv_house_hotel_international"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="@dimen/p_in"
                android:scaleType="fitXY"
                android:src="@drawable/ic_home_page_default_category_international_hotel" />

            <ImageView
                android:id="@+id/online_ticket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="@dimen/p_in"
                android:paddingTop="@dimen/p_in"
                android:scaleType="fitXY"
                android:src="@drawable/ic_home_page_default_category_ticket" />

            <ImageView
                android:id="@+id/online_nearby"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@drawable/ic_home_page_default_category_nearby" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/iv_house_travel_cruise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="@dimen/p_in"
                android:scaleType="fitXY"
                android:src="@drawable/ic_home_page_default_category_cruise" />

            <ImageView
                android:id="@+id/iv_house_travel_driving"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="@dimen/p_in"
                android:scaleType="fitXY"
                android:src="@drawable/ic_home_page_default_category_self_driving_travel" />

            <ImageView
                android:id="@+id/iv_house_travel_nearby"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="@dimen/p_in"
                android:scaleType="fitXY"
                android:src="@drawable/ic_home_page_default_category_nearby_travel" />

            <ImageView
                android:id="@+id/iv_house_plane_train"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="@dimen/p_in"
                android:paddingTop="@dimen/p_in"
                android:scaleType="fitXY"
                android:src="@drawable/ic_home_page_default_category_train" />

            <ImageView
                android:id="@+id/iv_house_plane_car"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="@dimen/p_in"
                android:scaleType="fitXY"
                android:src="@drawable/ic_home_page_default_category_rent_car" />

            <ImageView
                android:id="@+id/iv_house_hotel_local"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="@dimen/p_in"
                android:scaleType="fitXY"
                android:src="@drawable/ic_home_page_default_category_local_play" />

            <ImageView
                android:id="@+id/online_customize_travel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="@dimen/p_in"
                android:paddingTop="@dimen/p_in"
                android:scaleType="fitXY"
                android:src="@drawable/ic_home_page_default_category_customize_travel" />

            <ImageView
                android:id="@+id/customize_finance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@drawable/ic_home_page_default_category_finance" />
        </LinearLayout>
    </LinearLayout>

    <GridView
        android:id="@+id/grid_house_smallCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:listSelector="#00000000"
        android:numColumns="5" >
    </GridView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/m_out"
        android:background="@color/color_white"
        android:padding="@dimen/p_out"
        android:orientation="horizontal" >

        <ViewFlipper
            android:id="@+id/vf_house_signin_snatch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:flipInterval="6000" >
        </ViewFlipper>

        <ImageView
            android:id="@+id/iv_signin_snatch"
            android:layout_width="85dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/m_normal"
            android:src="@drawable/signin_snatch" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginRight="@dimen/m_in"
        android:layout_marginTop="@dimen/m_in" >

        <LinearLayout
            android:id="@+id/line_house_specials"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/m_in"
            android:layout_weight="2"
            android:background="@color/color_white"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_house_specials"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/background_home_phonespecial"
                android:gravity="center"
                android:textColor="@color/color_white"
                android:textSize="@dimen/ts_small" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/p_out" >

                <ImageView
                    android:id="@+id/iv_house_temai0"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:paddingRight="@dimen/p_out"
                    android:src="@drawable/ic_empty" />

                <TextView
                    android:id="@+id/tv_house_temai1_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/iv_house_temai0"
                    android:layout_toRightOf="@+id/iv_house_temai0"
                    android:maxEms="8"
                    android:singleLine="true"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/tv_house_temai1_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/textView7"
                    android:layout_toRightOf="@+id/iv_house_temai0"
                    android:text="TextView"
                    android:textColor="@color/color_oringe" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/iv_house_temai0"
                    android:layout_toRightOf="@+id/iv_house_temai0"
                    android:text="TextView" />
            </RelativeLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_house_temai1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/m_in"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/ic_empty" />

        <ImageView
            android:id="@+id/iv_house_temai2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/ic_empty" />
    </LinearLayout>

</LinearLayout>