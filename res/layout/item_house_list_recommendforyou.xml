<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/iv_house_more"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        android:src="@drawable/ic_house_more_background" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_house_more"
        android:layout_margin="@dimen/m_normal"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_house_more_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_house_more_price"
            android:paddingBottom="@dimen/p_out"
            android:paddingLeft="@dimen/p_normal"
            android:paddingRight="@dimen/p_normal"
            android:paddingTop="@dimen/p_out"
            android:textColor="@color/color_white"
            android:textSize="@dimen/ts_small" />

        <TextView
            android:id="@+id/tv_house_more_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_house_more_desc"
            android:gravity="center"
            android:textColor="@color/color_white"
            android:textSize="@dimen/ts_small" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_house_more"
        android:layout_margin="@dimen/m_normal"
        android:alpha="0.7"
        android:background="@drawable/background_house_more_type"
        android:paddingLeft="@dimen/p_normal"
        android:paddingRight="@dimen/p_normal" >

        <ImageView
            android:id="@+id/img_main_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/icon_home_page_product_group" />

        <TextView
            android:id="@+id/tv_house_more_typename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/m_out"
            android:textColor="@color/color_white"
            android:textSize="@dimen/ts_small" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/m_out"
            android:background="@color/color_white" />

        <TextView
            android:id="@+id/tv_house_more_cityname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/m_out"
            android:textColor="@color/color_white"
            android:textSize="@dimen/ts_small" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_house_more_satisfaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_house_more"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/m_normal"
        android:textColor="@color/color_white"
        android:textSize="@dimen/ts_small" />

    <TextView
        android:id="@+id/tv_house_more_peopleCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_house_more_satisfaction"
        android:layout_toLeftOf="@+id/tv_house_more_satisfaction"
        android:textColor="@color/color_white"
        android:textSize="@dimen/ts_small" />

    <LinearLayout
        android:id="@+id/line_house_more_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_house_more"
        android:orientation="vertical"
        android:background="@color/color_white"
        android:padding="@dimen/p_normal" >

        <TextView
            android:id="@+id/tv_house_more_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/p_in" />

        <TextView
            android:id="@+id/tv_house_more_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/p_in"
            android:singleLine="true"
            android:textColor="@color/color_grey"
            android:textSize="@dimen/ts_small" />

        <ImageView
            android:id="@+id/iv_house_more_activityIconUrl"
            android:layout_width="50dp"
            android:layout_height="15dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_empty" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/line_house_more_title" />

</RelativeLayout>