<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/FrameLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tuiniu.found.activity.JiebanActivity" >

    <com.handmark.pulltorefresh.library.PullToRefreshScrollView
        android:id="@+id/scrollView_jiebang"
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
            <include android:id="@+id/clue_foundjiebang"
                    layout="@layout/hiebang_head"/>
            
            
  
        </LinearLayout>
    </com.handmark.pulltorefresh.library.PullToRefreshScrollView>


   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/jiebanggaodu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:padding="10dp" >

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back_icon" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="结伴同游" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/find_post_detail_other_more_icon" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_shang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff" >

                <RelativeLayout
                    android:id="@+id/rel_paly_shang"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="10dp" >

                    <TextView
                        android:id="@+id/textView88"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="带你玩" />

                    <TextView
                        android:id="@+id/tv_play_ind_shang"
                        android:layout_width="50dp"
                        android:layout_height="0.5dp"
                        android:layout_below="@+id/textview88"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="25dp"
                        android:background="#006600" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rel_jie_shang"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="10dp" >

                    <TextView
                        android:id="@+id/textView90"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="求结伴" />

                    <TextView
                        android:id="@+id/tv_jie_ind_shang"
                        android:layout_width="50dp"
                        android:layout_height="0.5dp"
                        android:layout_below="@+id/textview90"
                        android:layout_centerHorizontal="true"
                        android:visibility="gone"
                        android:layout_marginTop="25dp"
                        android:background="#006600" />
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" 
                android:background="#ffffff">

                <ImageView
                    android:id="@+id/imageView88"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:padding="5dp"
                    android:src="@drawable/icon_note" />

                <TextView
                    android:id="@+id/textView92"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/imageView88"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/imageView88"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:text="免费申明：一下结伴由发起人自行发布，" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
