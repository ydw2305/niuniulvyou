<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white" >

    <TextView
        android:id="@+id/tv_city_now"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/p_out"
        android:text="根据您的位置推荐" />

    <TextView
        android:id="@+id/tv_city_list_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_city_now"
        android:padding="@dimen/p_normal"
        android:text="定位" />

    <TextView
        android:id="@+id/tv_city_letter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_city_list_name"
        android:padding="@dimen/p_out"
        android:text="热门城市" />

    <com.xinbo.widget.GridView4ScrollView
        android:id="@+id/grid_city_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_city_letter"
        android:listSelector="#00000000"
        android:numColumns="4"
        android:padding="@dimen/p_normal" >
    </com.xinbo.widget.GridView4ScrollView>

</RelativeLayout>