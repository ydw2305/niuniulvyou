<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tuniu.fragment.HomeFragment" >

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:id="@+id/rela_house_header"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/h_header"
        android:background="@color/color_white" >

        <TextView
            android:id="@+id/tv_house_city"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:drawablePadding="3dp"
            android:drawableRight="@drawable/down_arrow"
            android:gravity="center_vertical"
            android:paddingLeft="7dp"
            android:text="上海"
            android:textColor="@color/color_green"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/line_house_left"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignWithParentIfMissing="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:layout_toLeftOf="@+id/iv_phone_call"
            android:layout_toRightOf="@+id/tv_house_city"
            android:background="@drawable/background_house_search"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_search_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/p_normal"
                android:paddingRight="@dimen/p_out"
                android:src="@drawable/search_icon"
                android:visibility="visible" />

            <TextView
                android:id="@+id/header_search"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:cursorVisible="false"
                android:gravity="center_vertical"
                android:text="目的地/关键词"
                android:textColor="@color/color_grey"
                android:textSize="@dimen/ts_normal" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_scan_qr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/line_house_left"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@drawable/btn_house_scan_qr"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/iv_phone_call"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/iv_phone_niuxin"
            android:padding="@dimen/p_out"
            android:src="@drawable/btn_main_call" />

        <ImageView
            android:id="@+id/iv_phone_niuxin"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/p_out"
            android:src="@drawable/btn_house_niuxin" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/color_grey" />
    </RelativeLayout>

    <!-- TODO: Update blank fragment layout -->

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rela_house_header" >

        <com.handmark.pulltorefresh.library.PullToRefreshListView
            android:id="@+id/pullrefresh_list_house"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:cacheColorHint="#00000000"
            android:divider="#00000000"
            android:dividerHeight="0dp"
            android:fadingEdge="none"
            android:fastScrollEnabled="false"
            android:footerDividersEnabled="false"
            android:headerDividersEnabled="false"
            android:listSelector="#00000000"
            android:smoothScrollbar="true" >
        </com.handmark.pulltorefresh.library.PullToRefreshListView>

        <RelativeLayout
            android:id="@+id/rela_house_head_radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible" >

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:background="@color/color_white"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/radio_house_head_recommendforyou0"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@drawable/btn_house_recommendforyou_background"
                    android:button="@null"
                    android:checked="true"
                    android:gravity="center"
                    android:paddingLeft="13dp"
                    android:paddingRight="13dp"
                    android:textColor="@color/textcolor_house_recommendforyou" />

                <RadioButton
                    android:id="@+id/radio_house_head_recommendforyou1"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_house_recommendforyou_background"
                    android:button="@null"
                    android:gravity="center"
                    android:textColor="@color/textcolor_house_recommendforyou" />

                <RadioButton
                    android:id="@+id/radio_house_head_recommendforyou2"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_house_recommendforyou_background"
                    android:button="@null"
                    android:gravity="center"
                    android:textColor="@color/textcolor_house_recommendforyou" />

                <RadioButton
                    android:id="@+id/radio_house_head_recommendforyou3"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_house_recommendforyou_background"
                    android:button="@null"
                    android:gravity="center"
                    android:textColor="@color/textcolor_house_recommendforyou" />
            </RadioGroup>

            <com.xinbo.widget.GridView4ScrollView
                android:id="@+id/grid_house_head_recommendForYou"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/radioGroup"
                android:background="@color/color_grey"
                android:horizontalSpacing="1dp"
                android:numColumns="4"
                android:verticalSpacing="1dp" >
            </com.xinbo.widget.GridView4ScrollView>
        </RelativeLayout>
    </FrameLayout>

    <ImageView
        android:id="@+id/iv_house_backtop"
        android:layout_width="@dimen/h_header"
        android:layout_height="@dimen/h_header"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/m_normal"
        android:src="@drawable/icon_back_top"
        android:visibility="invisible" />

</RelativeLayout>